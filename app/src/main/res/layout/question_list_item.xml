<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/baseholder"
        android:background="@drawable/whitefieldbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:id="@+id/topspan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imgProfile"
            android:layout_margin="8dp"
            />



        <TextView
            android:id="@+id/tvDatetr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/semi_black"
            android:textSize="10sp" />

        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/topspan"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@android:color/darker_gray"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Date"
            android:layout_marginEnd="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/semi_black"
            android:textSize="10sp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvDate"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:text="data data datat data datat datat datdatadtada"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"/>

    </RelativeLayout>

</LinearLayout>